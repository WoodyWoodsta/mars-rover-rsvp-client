{
  "name": "mars-rover-rsvp-client",
  "version": "0.0.1",
  "description": "UCT Mars Rover web based frontend client, acting as the RSVP",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf ./build",
    "build-core": "browserify ./src/app-core.es6 -o build/app-core.js --extension=.js --extension=.json --extension=.es6 -t [ babelify --presets [ @woodywoodsta/babel-preset-browser-bundle ] ] -r ./src/app-core.es6:app-core -x app-behaviors",
    "build-behaviors":  "browserify ./src/app-behaviors.es6 -o build/app-behaviors.js --extension=.js --extension=.json --extension=.es6 -t [ babelify --presets [ @woodywoodsta/babel-preset-browser-bundle ] ] -r ./src/app-behaviors.es6:app-behaviors -x app-core",
    "build-bundles": "npm run build-core && npm run build-behaviors",
    "build-polymer": "babel ./app --presets @woodywoodsta/babel-preset-browser-polymer -d ./build --copy-files",

    "rebuild-bundles": "npm run clean && mkdir build && npm run build-bundles",
    "rebuild-polymer": "npm run clean && mkdir build && npm run build-polymer",

    "watch-core": "watchify ./src/app-core.es6 -o build/app-core.js -v --extension=.js --extension=.json --extension=.es6 -t [ babelify --presets [ @woodywoodsta/babel-preset-browser-bundle ] ] -r app-core -x app-behaviors",
    "watch-behaviors":  "watchify ./src/app-behaviors.es6 -o build/app-behaviors.js -v --extension=.js --extension=.json --extension=.es6 -t [ babelify --presets [ @woodywoodsta/babel-preset-browser-bundle ] ] -r app-behaviors -x app-core",
    "watch-polymer": "babel ./app --presets @woodywoodsta/babel-preset-browser-polymer -d ./build -w",

    "build": "npm run clean && mkdir build && npm run build-bundles && npm run build-polymer",
    "watch": "npm run clean && mkdir build && concurrently --kill-others 'npm run watch-bundles' 'npm run watch-polymer'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WoodyWoodsta/mars-rover-rsvp-client.git"
  },
  "author": "Sean Wood <woodywoodsta@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/WoodyWoodsta/mars-rover-rsvp-client/issues"
  },
  "homepage": "https://github.com/WoodyWoodsta/mars-rover-rsvp-client#readme",
  "devDependencies": {
    "@woodywoodsta/babel-preset-browser-bundle": "^1.0.0",
    "@woodywoodsta/babel-preset-browser-polymer": "^1.0.0",
    "babel-cli": "^6.11.4",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "concurrently": "^2.2.0",
    "watchify": "^3.7.0"
  }
}
